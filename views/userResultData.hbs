<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style type="text/css">
      .tg { border-collapse: collapse; border-spacing: 0; } .tg td {
      border-color: black; border-style: solid; border-width: 1px; font-family:
      Arial, sans-serif; font-size: 14px; overflow: hidden; padding: 10px 5px;
      word-break: normal; } .tg th { border-color: black; border-style: solid;
      border-width: 1px; font-family: Arial, sans-serif; font-size: 14px;
      font-weight: normal; overflow: hidden; padding: 10px 5px; word-break:
      normal; } .tg .tg-0lax { text-align: left; vertical-align: top; }
    </style>
  </head>
  <body>
    <div>
      {{#if hasUsers}}
      <table class="tg">
        <thead>
          <tr>
            <th class="tg-0lax">nationalId</th>
            {{#if adminView}}
            <th class="tg-0lax">password</th>
            {{/if}}
            <th class="tg-0lax">email</th>
            <th class="tg-0lax">docs</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr>
            <td class="tg-0lax">{{this.nationalId}}</td>
            {{#if ../adminView}}
            <td class="tg-0lax">{{this.password}}</td>
            {{/if}}
            <td class="tg-0lax">{{this.email}}</td>
            <td class="tg-0lax">
              <a href="/user-results/{{this.docs}}">Your results:>
                <i class="fa-solid fa-file-pdf fa-2xl" id="pdf-icon"></i>
              </a>
            </td>
            {{#if ../adminView}}
            <td>
              <a id="update-user-btn" href="/admin/users/edit/{{this._id}}">              
                <button>Update user</button>
              </a>
            </td>
            {{/if}}
          </tr>
          
          {{/each}}
        </tbody>
      </table>
      {{ else}} 
      <h1>No users found</h1>
      {{/if}}
    </div>
  </body>
</html>