<div>
  </form>
  <form action="/results" method="POST" class="user-login-form">
    <ul>
      <li class="form-row">
        {{#if isAdminView}}
        <label for="email">Email:</label>
        <input type="email" name="email" />
        {{else}}
        <label for="nationalId">EGN:</label>
        <input type="number" name="nationalId" />
        {{/if}}
      </li>
      <li class="form-row">
        <label for="password">Password:</label>
        <input type="password" alt="password" name="password" />
      </li>
      {{#if submitView}}
      <li class="form-row">
        <label for="confirmPassword">Confirm password:</label>
        <input type="password" alt="password" name="confirmPassword" />
      </li>
      {{/if}}
      <li class="form-row">
        {{#if isAdminView}}
          {{#if submitView}} 
          <button type="submit" formaction="/admin/signup" method="POST">Submit</button>
          {{else}}
          <button type="submit" formaction="/admin/login" method="POST">Login</button>
          {{/if}}
        {{else}}
        <button type="submit" method="POST">Check result</button>
        {{/if}}
      </li>
      {{!-- <a href="/admin/reset">Reset Password</a> --}}
    </ul>
  </form>
</div>